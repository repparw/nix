## Aliases
	# Raspberry Pi
		alias rpi='env TERM=xterm-256color ssh -p2222 pi@192.168.0.16'
	# fzf
		alias f='fzf'

	# task mpv
		alias qmpv='nq -c mpv '

	# Open archivebox
		alias openbox='cd ~/archivebox; archivebox server & sleep 5 && firefox 127.0.0.1:8000; fg'

	# Asks your passwords, becomes root, opens a interactive non login shell
		alias su='sudo -s'

	# Make feh borderless and default to black image background color
		alias feh='feh -x -Z -. --image-bg black'

	# Vim = Nvim

		alias vim='nvim'; alias vi='nvim'

		alias v='vi'

	# cd && ls	

		alias ls='ls --color=auto'

		alias ll='ls -lavh --ignore=..'   # show long listing of all except ".."

		alias l.='ls -A'

		alias ld='ls -d */'

		alias e='lfcd'
		
		alias lf='lfcd'

	# Grep

		alias gh='history|rg'

	# Safety nets

		alias trash='mv --force -t ~/.local/share/Trash '

		alias x='trash'

		alias cp='rsync -ah --info=progress2'

		alias ln='ln -i'

		alias mv='mv -i'

	    # Preventing changing perms on /

	    	alias chown='chown --preserve-root'

	    	alias chmod='chmod --preserve-root'

	    	alias chgrp='chgrp --preserve-root'

	# Human-readable output

		alias mnt="mount | awk -F' ' '{ printf \"%s\t%s\n\",\$1,\$3; }' | column -t | egrep ^/dev/ | sort"

		alias path='echo -e ${PATH//:/\\n}'

		alias du='dust'

		alias diff='colordiff' # Colorize output

		alias c='clear'

	    # System info

	    	alias meminfo='free -h -l -t'

		alias cpuinfo='lscpu'

	# Create parent directories if they don't exist

		alias mkdir='mkdir -pv'

	# Bluetooth

		alias btctl='bluetoothctl'

	# Others
	
	if [ "command -v duf" ]; then
		alias df='duf' # Better df
	fi

	
		alias ddgr='ddgr -n3'

		alias now='date +"%T"' # Time

		alias ping='ping -c 5' # Stop ping

		alias wget='wget -c'

	 #if [ "command -v btop" ]; then
		alias top='btop'
	 #else
		#alias top='htop'
	 #fi

		alias q='exit'

		alias calc='qalc'

		alias sys='systemctl'

		alias syslist='systemctl list-unit-files'

		alias sdown='shutdown now'

		alias pptpdf='libreoffice --headless --convert-to pdf '

	# yt-dl	

		alias yd='yt-dlp'

	# ytfzf with nq for freeing the terminal
		alias y='ytf'
		alias ytf="env YTFZF_ENABLE_FZF_DEFAULT_OPTS=1 YTFZF_PLAYER='nq -c mpv' ytfzf"

		alias ya='ytf -a'

		alias yh='ytf -H'

		alias yda="yt-dlp -x --add-metadata --audio-quality 0 --output '/home/repparw/Music/ytmusic/%(title)s.%(ext)s'"

	# temp alias
		alias temp="watch -d -n 2 sensors -A"
		alias gputemp="watch -n 2 nvidia-smi --query-gpu=temperature.gpu --format=csv,noheader 39"

	# GPU mining (mm.js gminer)
		alias gpumine="cd ~/.mining/gminer && ./mine_ravencoin.sh"

	# CPU Mining (xmrig)
		alias cpumine="cd ~/.mining/xmrig && sudo ./xmrig -c config.json"

## Functions
	# ytfzf + xclip for link
	function ytl() {
	  ytfzf -I l "$@" | tr -d '\n' | sed -re 's|^https://www.youtube.com/(watch\?v=)?|https://youtu.be/|g' | xclip -sel clip 
	}
