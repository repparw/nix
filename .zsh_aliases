## Aliases
	# Raspberry Pi
		alias rpi='env TERM=xterm-256color ssh pi@192.168.0.16'
	# fzf
		alias f='fzf'

	# task mpv
		alias qmpv='nq -c mpv '

	# Open archivebox
		alias openbox='cd ~/archivebox; archivebox server & sleep 5 && firefox 127.0.0.1:8000; fg'

	# Make zsh default shell for su
		alias su='su --shell=/usr/bin/zsh'

	# Vim = Nvim

		alias vim='nvim'; alias vi='nvim'

		alias v='vi'

		alias sv='sudo nvim'

	# cd && ls	

		alias ls='ls --color=auto'

		alias ll='ls -lavh --ignore=..'   # show long listing of all except ".."

		alias l.='ls -a'

		alias ld='ls -d */'

		alias e='lfcd'
		
		alias lf='lfcd'

	# Grep

		alias gh='history|rg'

		alias grep='rg'

	# Safety nets

		alias trash='mv --force -t ~/.local/share/Trash '

		alias rm='trash'

		alias cp='rsync -ah --info=progress2'

		alias ln='ln -i'

		alias mv='mv -i'

	    # Preventing changing perms on /

	    	alias chown='chown --preserve-root'

	    	alias chmod='chmod --preserve-root'

	    	alias chgrp='chgrp --preserve-root'

	# Human-readable output

		alias mnt="mount | awk -F' ' '{ printf \"%s\t%s\n\",\$1,\$3; }' | column -t | egrep ^/dev/ | sort"

		alias path='echo -e ${PATH//:/\\n}'

		alias du='du -h'

		alias diff='colordiff' # Colorize output

		alias c='clear'

	    # System info

	    	alias meminfo='free -h -l -t'

		alias cpuinfo='lscpu'

	# Create parent directories if they don't exist

		alias mkdir='mkdir -pv'

	# Bluetooth

		alias btctl='bluetoothctl'

	# Others

		alias now='date +"%T"' # Time

		alias ping='ping -c 5' # Stop ping

		alias wget='wget -c'

		alias top='htop'

		alias q='exit'

		alias calc='qalc'

		alias sys='systemctl'

		alias syslist='systemctl list-unit-files'

		alias sdown='shutdown now'

		alias pptpdf='libreoffice --headless --convert-to pdf '

	# yt-dl	

		alias yt='youtube-dl'

	# ytfzf with nq for freeing the terminal
		alias ytf="env YTFZF_ENABLE_FZF_DEFAULT_OPTS=1 YTFZF_PLAYER='nq -c mpv' ytfzf"

		alias yta="youtube-dl -x --add-metadata --audio-quality 0 --output '/home/repparw/Music/ytmusic/%(title)s.%(ext)s'"

	# temp alias
		alias temp="watch -n 2 sensors"

	# PhoenixMiner
	    alias mine="cd ~/Downloads/PhoenixMiner_5.6c_Linux && ./PhoenixMiner -clKernel 0 -pool ssl://eu1.ethermine.org:5555 -pool2 ssl://asia1.ethermine.org:5555 -wal 0xce9b83b7e09901fc7289ca74d17669f9d26269ec.1 -acm -cclock 1150 -cvddc 850 -mvddc 900 -mclock 2000 -prate 0.02"

## Functions
	# ytfzf + xclip for link
	function ytl() {
	  ytfzf -aL "$@" | sed -e 's|^[^=]*=|https://youtu.be\/|g' | xclip -sel clip 
	}
