## Aliases
	# Sudo expansion
		alias sudo='sudo '
	# Raspberry Pi
		alias rpi='env TERM=xterm-256color ssh -p2222 dietpi@192.168.0.4'
	# fzf
		alias f='fzf'

	# task mpv
		alias qmpv='nq -c mpv '

	# Open archivebox
		alias openbox='cd ~/archivebox; archivebox server & sleep 5 && firefox 127.0.0.1:8000; fg'

	# Asks your passwords, becomes root, opens a interactive non login shell
		alias su='sudo -s'

	# Make feh borderless and default to black image background color
		alias feh='feh -x -Z -. --image-bg black'

	# Vim = Nvim

		alias vim='nvim'; alias vi='nvim'

		alias v='vi'

	# cd && ls	

	if command -v exa >/dev/null 2>&1; then
		alias ls='exa' # Better df

		alias ll='exa -lah'

		alias l.='exa -a'

		alias la='l.'
	  else
		alias ls='ls --color=auto'

		alias ll='ls -lavh --ignore=..'   # show long listing of all except ".."

		alias l.='ls -A'

	fi

		alias e='lf'

	# Grep

		alias gh='history|rg'

	# Safety nets

		alias trash='mv --force -t ~/.local/share/Trash '

		alias x='trash'

		alias cp='rsync -ah --info=progress2'

		alias ln='ln -i'

		alias mv='mv -i'

	    # Preventing changing perms on /

	    	alias chown='chown --preserve-root'

	    	alias chmod='chmod --preserve-root'

	    	alias chgrp='chgrp --preserve-root'

	# Human-readable output

		alias mnt="mount | awk -F' ' '{ printf \"%s\t%s\n\",\$1,\$3; }' | column -t | egrep ^/dev/ | sort"

		alias path='echo -e ${PATH//:/\\n}'


	if command -v dust >/dev/null 2>&1; then
		alias du='dust'
	fi

		alias diff='colordiff' # Colorize output

	    # System info

	    	alias meminfo='free -h -l -t'

		alias cpuinfo='lscpu'

	# Create parent directories if they don't exist

		alias mkdir='mkdir -pv'

	# Bluetooth

		alias btctl='bluetoothctl'

	# Others
	
	if command -v duf >/dev/null 2>&1; then
		alias df='duf' # Better df
	fi

	if command -v bat >/dev/null 2>&1; then
		alias cat='bat' # Better cat
	fi
	
		alias ddgr='ddgr -n3'

		alias now='date +"%T"' # Time

		alias ping='ping -c 5' # Stop ping

		alias wget='wget -c'

	 if command -v btm >/dev/null 2>&1; then
		alias top='btm --color gruvbox'
	  elif command -v htop >/dev/null 2>&1; then
		alias top='htop'
	 fi

		alias q='exit'

		alias calc='qalc'

		alias sys='systemctl'

		alias syslist='systemctl list-unit-files'

		alias sdown='shutdown now'

		alias pptpdf='libreoffice --headless --convert-to pdf '

	# yt-dl	

		alias yd='yt-dlp'

	# ytfzf with nq for freeing the terminal
		alias y='ytf'
		alias ytf="env YTFZF_ENABLE_FZF_DEFAULT_OPTS=1 ytfzf"

		alias ya='ytf -a'
		alias ym='yt'

		alias yh='ytf -H'

		alias yda="yt-dlp -x --add-metadata --audio-quality 0 --output '/home/repparw/Music/ytmusic/%(title)s.%(ext)s'"

	# Temperature 
	alias temp="watch -td -n 300 'echo -e \"\$(sensors -A nvme-pci-0400 k10temp-pci-00c3 amdgpu-pci-2d00)
\"'"
