[Unit]
Description=OBS Studio
StartLimitIntervalSec=60
StartLimitBurst=4
After=plasma-xdg-desktop-portal-kde.service

[Service]
ExecStart=/usr/bin/flatpak run com.obsproject.Studio --disable-shutdown-check --startreplaybuffer --minimize-to-tray
Restart=on-failure
RestartSec=1

[Install]
WantedBy=graphical-session.target
